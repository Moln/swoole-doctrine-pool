{
    "name": "moln/swoole-doctrine-pool",
    "autoload": {
        "psr-4": {
            "Moln\\SwooleDoctrinePool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MolnTest\\SwooleDoctrinePool\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Moln",
            "email": "moln.xie@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-swoole": "*",
        "doctrine/dbal": "^4.2"
    },
    "require-dev": {
        "doctrine/orm": "^3.3",
        "phpunit/phpunit": "^11.4",
        "swoole/ide-helper": "^5.1",
        "slevomat/coding-standard": "^8.15",
        "laminas/laminas-servicemanager": "^4.3",
        "roave/psr-container-doctrine": "^5.5"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
